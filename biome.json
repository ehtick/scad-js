{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "all": true,
        "useExhaustiveDependencies": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "error",
        "useShorthandArrayType": "error",
        "useTemplate": "error",
        "noShoutyConstants": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "a11y": {
        "all": false
      },
      "nursery": {
        "all": false
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "dist/**/*",
      "node_modules/**/*",
      "coverage/**/*",
      "test/*.js"
    ]
  }
} 